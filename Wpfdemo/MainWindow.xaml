<Window x:Class="Wpfdemo.MainWindow"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpfdemo"
        mc:Ignorable="d"
        Title="图书管理系统" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
     
        <TextBlock Margin="10" Grid.Row="0" Grid.Column="0" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center">图书管理系统</TextBlock>
        <StackPanel Grid.Row="1" Grid.Column="0" Background="#0078d4" HorizontalAlignment="Center">
            <TextBlock FontSize="25" Foreground="#fff" Text="登录" />
        </StackPanel>
        <Grid Grid.Row="3" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
                <RowDefinition Height="30"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Text="账号" Grid.Row="0" Grid.Column="0" Background="red" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1"  FontSize="18" />
            <TextBlock Text="密码" Grid.Row="1" Grid.Column="0" Margin="0 10 0 0" Background="red" Foreground="#fff" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1"  FontSize="18" />
            <CheckBox Grid.Row="2" Grid.ColumnSpan="2" Content="保存密码" VerticalAlignment="Center" />
            <Button Grid.Row="3" Grid.ColumnSpan="2"  Content="登录" Click="HandleLogin"/>
        </Grid>

    </Grid>
    
</Window>
